                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "example": "ะก++ Basic course"
                    },
                    "author": {
                      "type": "string",
                      "example": "Herbert Shield"
                    },
                    "year": {
                      "type": "number",
                      "example": 2020
                    },
                    "pages": {
                      "type": "number",
                      "example": 510
                    },
                    "status": {
                      "type": "string",
                      "example": "goingToRead"
                    },
                    "rating": {
                      "type": "number",
                      "example": 0
                    },
                    "resume": {
                      "type": "string",
                      "example": "My resume"
                    },
                    "owner": {
                      "type": "string",
                      "example": "62d15698f1aa0a611943115d"
                    },
                    "_id": {
                      "type": "string",
                      "example": "62dc357442a2be44d13face5"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "2022-07-23T17:52:52.540Z",
                      "example": "2022-07-23T17:52:52.540Z"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "2022-07-23T17:52:52.540Z",
                      "example": "2022-07-23T17:52:52.540Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Book not found",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
